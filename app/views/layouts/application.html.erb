<!DOCTYPE html>
<html>
  <head>
    <title>Cue</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-green-600 font-sans sm:px-4 pt-4 text-base"
        data-controller="radiolabel" data-radiolabel-duration-value="2">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="flex flex-col sm:flex-row space-x-4 space-y-4 sm:space-y-0 items-start">
      <div class="flex-grow sm:flex-grow-0 px-4 sm:px-0 sm:w-60">
        <div class="relative">
          <%= link_to(root_path) do %>
            <%= image_tag('logo.png', height: '27', width: '120', class: "inline") %>
          <% end %>

          <% if user_signed_in? %>
            <div data-controller="menu" class="inline-block float-right">
              <%= image_tag(current_user.gravatar_url, size: "30x30", class: "inline rounded border border-green-100", data: { action: "click->menu#toggle"}) %>
              <div data-menu-target="dropdown" class="hidden absolute bg-white text-black right-0 p-2 border border-green-100 rounded">
                <%= link_to(t(:profile), edit_user_registration_path, class: "block hover:bg-green-100 px-3 py-1") %>
                <%= link_to(t(:sign_out), destroy_user_session_path, method: :delete, class: "block hover:bg-green-100 px-3 py-1") %>
              </div>
            </div>
          <% elsif controller_name != 'sessions' %>
            <%= link_to(t(:log_in), new_user_session_path) %>
          <% else %>
            <%= link_to(t(:sign_up), new_user_registration_path) %>
          <% end %>
        </div>

        <% if user_signed_in? %>
          <%= render partial: 'sidebar' %>
        <% end %>
      </div>

      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </body>
</html>
