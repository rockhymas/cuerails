<div class="bg-white flex-1 rounded space-y-4 pb-2 w-full">
  <div class="flex flex-row text-xl sm:text-2xl px-4 pt-4 text-center">
    <span class="flex-grow bg-transparent p-1 rounded">
      Forgot your password?
    </span>
  </div>

  <div class="px-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field py-1">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded border-green-600 w-full" %>
      </div>

      <div class="actions  py-1">
        <%= f.submit "Send me reset password instructions", class: "bg-green-600 rounded px-3 w-full text-white text-center border-4 border-transparent hover:bg-green-100" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>