<div id="sidebar" class="flex flex-col py-4 space-y-4 w-full">
  <%= render layout: 'list_sets/set', locals: { list_set: current_user.plan_list_set } do %>
    <% if current_user.can_plan_day? %>
      <div class="hover:bg-green-100 text-center">
        <%= link_to t(:plan_next_day), plan_next_day_path, method: :post %>
      </div>
    <% end %>
  <% end %>

  <%= render layout: 'list_sets/set', locals: { list_set: current_user.current_list_set, title: 'Current Lists' } do %>
    <div class="hover:bg-green-100">
      <%= link_to t(:new_list), current_new_list_path, method: :post %>
    </div>
  <% end %>

  <div id="archive_lists" class="bg-white text-black p-2 border border-green-100 rounded">
    <div>Archive Lists</div>
    <% current_user.lists.where(list_set_id: nil).each do |list| %>
      <div class="hover:bg-green-100">
        <%= link_to(list.name, list) %>
      </div>
    <% end %>
  </div>
</div>
