<div 
    class="flex flex-col space-y-2 hidden"
    data-controller="new-todo"
    data-reflex-dataset="combined"
    data-list-target="template">
  <div class="flex flex-row items-center space-x-2">
    <%= check_box_tag dom_id(list, "template-check"), "", false, class: "appearance-none focus:outline-none focus:ring-green-600 focus:ring-2 h-6 w-6 text-green-600 border-green-100 rounded", data: { "new-todo-target": "checkbox", action: "change->new-todo#complete", "reflex-dataset": "combined" } %>
    <%= text_field_tag dom_id(list, "template-title"), "", class: "flex-grow focus:outline-none focus:ring-green-600 focus:ring-2 my-0.5 p-0.5", data: { "new-todo-target": "title", action: "input->new-todo#rename keydown->new-todo#keydown  keypress->new-todo#keypress", "reflex-dataset": "combined" } %>
  </div>
</div>
