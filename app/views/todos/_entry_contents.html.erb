<div class="flex flex-row items-center">
  <%= check_box_tag "todo-#{todo.id}", "", todo.complete, class: "appearance-none focus:outline-none focus:ring-green-600 focus:ring-2 mr-2 h-6 w-6 text-green-600 border-gray-300 rounded border", data: { "todo-target": "checkbox", action: "change->todo#complete", "reflex-dataset": "combined" } %>
  <%= text_field_tag "todo-title-#{todo.id}", todo.title, class: "flex-grow focus:outline-none focus:ring-green-600 focus:ring-2 my-1 p-0.5", data: { "todo-target": "title", action: "input->todo#rename keypress->todo#keypress keydown->todo#keydown blur->todo#blur", "reflex-dataset": "combined" } %>
  <%= content_tag :span, 'handle: ' + todo.position.to_s, class: "handle", data: { "todo-target": "handle", action: "click->todo#clickHandle" } %>
</div>
<div id="todo-options-<%= todo.id %>" data-todo-target="options" style="display:none;">
  <%= render partial: 'todos/options', locals: { todo: todo } %>
</div>
